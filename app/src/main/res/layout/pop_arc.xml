<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/fl_inside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right">
        <com.ogaclejapan.arclayout.ArcLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:arc_origin="right|bottom"
            app:arc_color="@color/theme_half"
            app:arc_radius="174dp"
            app:arc_axisRadius="150dp"
            app:arc_freeAngle="false"
            app:arc_reverseAngle="false">

        </com.ogaclejapan.arclayout.ArcLayout>
        <com.ogaclejapan.arclayout.ArcLayout
            android:id="@+id/arc_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:arc_origin="right|bottom"
            app:arc_color="@color/white"
            app:arc_radius="170dp"
            app:arc_axisRadius="140dp"
            app:arc_freeAngle="false"
            app:arc_reverseAngle="false">
            <LinearLayout
                android:id="@+id/ll_message"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_message"
                    android:layout_width="@dimen/menu_ic_size"
                    android:layout_height="@dimen/menu_ic_size"
                    android:src="@drawable/ic_message_normal"/>
                <TextView
                    android:id="@+id/tv_message"
                    android:text="消息"
                    android:textSize="@dimen/menu_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_team"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_team"
                    android:layout_width="@dimen/menu_ic_size"
                    android:layout_height="@dimen/menu_ic_size"
                    android:src="@drawable/ic_team_normal"/>
                <TextView
                    android:id="@+id/tv_team"
                    android:text="团队"
                    android:textSize="@dimen/menu_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_record"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_record"
                    android:layout_width="@dimen/menu_ic_size"
                    android:layout_height="@dimen/menu_ic_size"
                    android:src="@drawable/ic_record_normal"/>
                <TextView
                    android:id="@+id/tv_record"
                    android:text="记录"
                    android:textSize="@dimen/menu_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_mine"
                    android:layout_width="@dimen/menu_ic_size"
                    android:layout_height="@dimen/menu_ic_size"
                    android:src="@drawable/ic_information_normal"/>
                <TextView
                    android:id="@+id/tv_mine"
                    android:textSize="@dimen/menu_text_size"
                    android:text="我的"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </com.ogaclejapan.arclayout.ArcLayout>

        <LinearLayout
            android:id="@+id/ll_information"
            android:paddingBottom="12dp"
            android:paddingRight="15dp"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_information"
                android:layout_width="@dimen/menu_ic_size"
                android:layout_height="@dimen/menu_ic_size"
                android:src="@drawable/ic_information_normal"/>
            <TextView
                android:id="@+id/tv_information"
                android:textSize="@dimen/menu_text_size"
                android:text="资讯"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>
