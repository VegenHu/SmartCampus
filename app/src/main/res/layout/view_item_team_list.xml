<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_team_size"
    android:gravity="center"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_team"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_team_size"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.itculturalfestival.smartcampus.ui.view.CircleImageView
            android:id="@+id/civ_team_head"
            android:layout_marginLeft="10dp"
            android:layout_width="@dimen/circle_imageview_size"
            android:layout_height="@dimen/circle_imageview_size" />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_team_name"
            android:textSize="@dimen/common_text_size_14"
            android:textColor="@color/text_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
